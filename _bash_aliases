alias cp='cp -i'
alias mv='mv -i' 
alias rm='rm -i'
alias df='df -h'
case "$(uname -s)" in
FreeBSD)
	alias ls='ls -GF'
	alias t='todo -d ~/.todo.cfg'
	alias grep='grep --color=auto'
	;;
Linux)
	alias ls='ls --color=auto -vF'
	alias t='~/sources/todo.txt-cli/todo.sh -d ~/.todo.cfg'
	alias grep='grep --color=auto'
	;;
OpenBSD)
	alias startx="/usr/X11R6/bin/startx & lock -np"
	;;
esac
